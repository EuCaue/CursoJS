<%- include('includes/head'); %>
  <%- include('includes/nav'); %>
    <section class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Crie sua <strong>conta</strong> ou Entre na sua <strong>conta</strong></h1>
          <p class="text-center lead">Faça login ou crie sua conta <strong>abaixo</strong></p>

          <%- include('includes/messages'); %>


            <div class="row">
              <div class="col-lg my-5">
                <h4>Faça seu cadastro</h4>
                <p>Se ainda não tiver uma conta, crie <strong>abaixo</strong>.</p>


                <form class="formCadastro"action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Seu Email</label>
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1"
                      aria-describedby="emailHelp" placeholder="Seu email aqui">
                    <div id="emailHelp" class="form-text">Não compartilhe seu <strong>email</strong>, com ninguém!</div>
                  </div>

                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Sua senha</label>
                    <input type="password" class="form-control" name="password" id="exampleInputEmail1"
                      aria-describedby="emailHelp" placeholder="Sua senha aqui">
                    <div id="emailHelp" class="form-text">Não compartilhe sua <strong>senha</strong>, com ninguém!</div>
                  </div>
                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>

              </div>

              <div class="col-lg my-5">
                <h4>Fazer Login</h4>

                <p>Faça seu login <strong>abaixo</strong>.</p>
                <form class="formLogin" action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Seu Email</label>
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1"
                      aria-describedby="emailHelp" placeholder="Seu email aqui">
                    <div id="emailHelp" class="form-text">Não compartilhe seu <strong>email</strong>, com ninguém!</div>
                  </div>
                  <div class="mb-3">

                    <label for="exampleInputEmail1" class="form-label">Sua senha</label>
                    <input type="password" class="form-control" name="password" id="exampleInputEmail1"
                      aria-describedby="emailHelp" placeholder="Sua senha aqui">
                    <div id="emailHelp" class="form-text">Não compartilhe sua <strong>senha</strong>, com ninguém!</div>
                  </div>
                  <button type="submit" class="btn btn-primary">Entrar</button>
                </form>


              </div>
            </div>

        </div>
        <div class="col-lg-2"></div>
      </div>
    </section>
    <%- include('includes/footer'); %>