<%- include('includes/head'); %>
    <%- include('includes/nav'); %>
        <section class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Contato</h1>
                    <p class="text-center lead">Crie ou edite seu contato<strong>abaixo.</strong></p>

                    <%- include('includes/messages') %>
                        <% if (contato._id) { %>
                            <form class="formContato" action="/contato/edit/<%= contato._id  %> " method="POST">
                                <% } else {%>
                                    <form class="formContato" action="/contato/register" method="POST">
                                        <% }%>
                                            <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                            <div class="mb-3">
                                                <label for="nome" class="form-label">Nome</label>
                                                <input value="<%= contato.nome %>" type="text" class="form-control"
                                                    name="nome" placeholder="Nome">
                                            </div>
                                            <div class="mb-3">
                                                <label for="sobrenome" class="form-label">Sobrenome</label>
                                                <input value="<%= contato.sobrenome %>" type="text" class="form-control"
                                                    name="sobrenome" placeholder="Sobrenome">
                                            </div>
                                            <div class="mb-3">
                                                <label for="email" class="form-label">Email</label>
                                                <input value="<%= contato.email %>" type="email" class="form-control"
                                                    name="email" placeholder="Email">
                                            </div>
                                            <div class="mb-3">
                                                <label for="telefone" class="form-label">Telefone</label>
                                                <input value="<%= contato.telefone %>" type="tel" class="form-control"
                                                    name="telefone" placeholder="Telefone">
                                            </div>


                                            <button type="submit" class="btn btn-primary">Salvar</button>
                                    </form>


                </div>
                <div class="col-lg-2"></div>
            </div>
        </section>
        <%- include('includes/footer'); %>